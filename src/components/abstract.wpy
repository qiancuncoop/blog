<style lang="less">
  .item {
    margin: 19px;
    padding-bottom: 1rem;
  }
  .itemBottom {
    margin-top: 0.4rem;
  }
  .title {
    font-weight: bolder;
    font-size: 1.1rem;
  }
  .subTitle {
    color: #999999;
    font-size: 0.7rem;
  }
  .separate {
    padding: 0 10px;
  }
  .image {
    background-color: #efefef;
  }
</style>

<template>
  <view class="item" @tap="{{type === 'image' ? 'tap' : null}}">
    <image
      wx:if="{{type === 'image'}}"
      src="{{image}}"
      class="image"
      style="width: {{width - 38}}px; height: {{(width - 38) / 14.4 * 9}}px;">
    </image>
    <video
      wx:else
      src="{{image}}"
      controls
      style="width: {{width - 38}}px; height: {{(width - 38) / 14.4 * 9}}px;">
    </video>
    <view style="width: {{windowWidth - 38}}px;" class="itemBottom">
      <text class="title">{{message.title}}</text>
    </view>
    <view style="width: {{windowWidth - 38}}px;" class="itemBottom">
      <text class="subTitle">{{message.created}}</text>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'

  export default class Abstract extends wepy.component {
    data = {
      separate: '|'
    }

    props = {
      message: Object,
      type: String,
      image: String,
      width: Number
    }

    methods = {
      tap() {
        this.$emit('childFunc')
      }
    }
  }
</script>
