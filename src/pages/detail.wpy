<style lang="less">
  @import "../libs/wxParse/wxParse.wxss";
  .content {
    padding: 1rem;
  }
</style>

<template>
  <view>
    <view class="topBorder"></view>
    <import src="../libs/wxParse/wxParse.wxml"/>
    <view class="content">
      <template is="wxParse" data="{{wxParseData:data.nodes}}" style="width: {{windowWidth}}px;"></template>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  var WxParse = require('../libs/wxParse/wxParse.js')

  export default class Detail extends wepy.page {
    config = {
      navigationBarTitleText: '正在加载标题...'
    }

    data = {
      windowWidth: 0,
      windowHeight: 0,
      body: null,
      title: '',
      data: {}
    }

    methods = {
    }

    onLoad(option) {
      let self = this

      // 动态设置文章标题
      try {
        let title = wepy.getStorageSync('title')
        self.title = wepy.getStorageSync('title')

        wepy.setNavigationBarTitle({
          title: title || option.title
        })
      } catch (e) {
      }

      // 获取可用屏幕宽高
      if (getCurrentPages().length === 1) {
        try {
          self.windowHeight = wepy.getStorageSync('windowHeight')
          self.windowWidth = wepy.getStorageSync('windowWidth')
        } catch (e) {}
      } else {
        wepy.getSystemInfo({
          success: function (res) {
            self.windowHeight = res.windowHeight
            self.windowWidth = res.windowWidth
          }
        })
      }

      // 获取文章内容
      try {
        let body = wepy.getStorageSync('body')
        self.body = wepy.getStorageSync('body')

        WxParse.wxParse('data', 'md', body || option.body, self)
      } catch (e) {
      }
    }

    onShareAppMessage() {
      let self = this

      return {
        title: self.title,
        path: '/pages/detail?body=' + self.body + '&title=' + self.title
      }
    }
  }
</script>
